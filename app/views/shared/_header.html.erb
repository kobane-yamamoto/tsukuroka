<header class="bg-gradient-to-r from-green-500 to-green-600 shadow-lg py-4 px-6 md:px-8 text-white">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-3xl font-bold tracking-tight">
      つくろか。
    </h1>
    <nav>
      <ul class="flex space-x-4">
        <% if user_signed_in? %>
          <!-- マイページ：ログインユーザー名（nameカラムが無ければemail） -->
          <li>
            <%= link_to (current_user.respond_to?(:name) && current_user.name.present?) ? current_user.name : current_user.email,
                        edit_user_registration_path,
                        class: "hover:text-green-200 transition-colors duration-200" %>
          </li>
          <!-- ログアウト -->
          <li>
            <%= link_to "ログアウト", destroy_user_session_path,
                        data: { turbo_method: :delete },
                        class: "hover:text-green-200 transition-colors duration-200" %>
          </li>
        <% else %>
          <!-- 未ログイン時はログイン/新規登録リンク -->
          <li>
            <%= link_to "ログイン", new_user_session_path,
                        class: "hover:text-green-200 transition-colors duration-200" %>
          </li>
          <li>
            <%= link_to "新規登録", new_user_registration_path,
                        class: "hover:text-green-200 transition-colors duration-200" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>