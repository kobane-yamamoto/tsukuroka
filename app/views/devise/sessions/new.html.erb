<div class="auth-page auth-page--left">
  <div class="auth-container" style="max-width:28rem;">
    <div class="mb-6">
      <h1 class="page-title" style="font-size:1.75rem;">つくろか。</h1>
      <p class="page-sub">メールアドレスとパスワードを入力してください。</p>
    </div>

    <div class="auth-card">
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field" style="display:flex; align-items:center; gap:.5rem; margin-bottom:1.5rem;">
            <%= f.check_box :remember_me, class: "" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "" %>
          </div>
        <% else %>
          <div class="field" style="margin-bottom:1.5rem;"></div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-outline-blue", style:"width:100%;" %>
        </div>
      <% end %>

      <div style="margin-top:1.25rem; font-size:.9rem; color:#6b7280;">
        アカウント未作成の方は
        <%= link_to "新規登録", new_registration_path(resource_name), class:"link" %>
      </div>
    </div>
  </div>
</div>