<div class="min-h-[80vh] flex items-start justify-center px-4 py-8">
  <div class="w-full max-w-2xl">
    <div class="mb-6">
      <h1 class="text-2xl md:text-3xl font-extrabold">マイページ編集</h1>
      <p class="text-sm text-gray-500 mt-1">ニックネームとメールアドレスとパスワードを変更できます。</p>
    </div>

    <div class= "card p-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: { method: :put }, local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-grid">

      <!-- ニックネーム -->
      <div>
        <label class="block text-sm font-semibold mb-2">ニックネーム</label>
        <%= f.text_field :nickname,
              class: "block w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
              autocomplete: "nickname" %>
      <p class="text-xs text-gray-400 mt-1">&#8203;</p>
      </div>

      <!-- メールアドレス -->
      <div>
        <label class="block text-sm font-semibold mb-2">メールアドレス</label>
        <%= f.email_field :email,
              class: "block w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
              autofocus: true, autocomplete: "email" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="text-xs text-gray-500 mt-1">確認待ち: <%= resource.unconfirmed_email %></p>
        <% end %>
        <p class="text-xs text-gray-400 mt-1">&#8203;</p>
      </div>

      <!-- 新しいパスワード -->
      <div>
        <label class="block text-sm font-semibold mb-2">
          新しいパスワード <span class="text-xs text-gray-500">(任意)</span>
        </label>
        <%= f.password_field :password,
              class: "block w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
              autocomplete: "new-password", placeholder: "変更する場合のみ入力" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-400 mt-1">※ <%= @minimum_password_length %>文字以上</p>
        <% end %>
        <p class="text-xs text-gray-400 mt-1">&#8203;</p>
      </div>

      <!-- 確認用 -->
      <div>
        <label class="block text-sm font-semibold mb-2">新しいパスワード（確認）</label>
        <%= f.password_field :password_confirmation,
              class: "block w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
              autocomplete: "new-password", placeholder: "同じパスワードを再入力" %>
        <p class="text-xs text-gray-400 mt-1">&#8203;</p>
      </div>

      <!-- 現在のパスワード -->
      <div>
        <label class="block text-sm font-semibold mb-2">
          現在のパスワード <span class="text-xs text-gray-500">(更新を確定するため必須)</span>
        </label>
        <%= f.password_field :current_password,
              class: "block w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
              autocomplete: "current-password" %>
        <p class="text-xs text-gray-500 mt-1">※ 情報を更新するには現在のパスワードが必要です。</p>
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit "更新する", class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>

  <!-- アカウント削除（「削除」だけ太字＋機能付きのまま） -->
  <!-- アカウント削除 -->
  <div class="mt-10 border-t pt-6">
    <h3 class="text-lg">
      アカウント
      <%= link_to "削除",
        registration_path(resource_name),
        data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
        class: "font-bold text-red-600 hover:underline" %>
    </h3>
    <p class="text-sm text-gray-600 mt-2">※ 削除すると登録データは元に戻せません。</p>
    <p class="text-xs text-gray-400 mt-1">&#8203;</p>
  </div>

  <!-- 戻るリンク -->
  <div class="mt-6 text-center">
    <%= link_to "戻る", root_path, class: "font-bold text-blue-700 hover:underline" %>
  </div>
</div>